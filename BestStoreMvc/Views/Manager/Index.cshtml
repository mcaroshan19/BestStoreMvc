@model List<Manager>

<h2 class="text-center mb-5">List Of Data</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Manager" asp-action="Create">Create</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Freshness</th>
            <th>Image File Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Comments</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.Name</td>
                <td>@manager.Category</td>
                <td>@manager.Freshness</td>
                <td><img src="Managers/@manager.ImagefileName" width="100" /></td>
                <td>@manager.Description</td>
                <td>@manager.Price</td>
                <td>@manager.Comments</td>
                <td>@manager.Email</td>
                <td>@manager.PhoneNumber</td>
                <td style="white-space: nowrap;">
                    <a class="btn btn-warning" asp-controller="Manager" asp-action="Edit" asp-route-id="@manager.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Manager" asp-action="Delete" asp-route-id="@manager.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
